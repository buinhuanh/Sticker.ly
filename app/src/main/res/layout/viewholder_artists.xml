<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:id="@+id/mainLayout"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:background="@drawable/suggested_bg"
    android:layout_height="450dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageArtists"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="132dp"
        android:layout_marginTop="12dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/Circle"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nameArtists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="artarysingapore" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/check_mark_icon" />

    </LinearLayout>

    <TextView
        android:id="@+id/numberArtists"
        android:layout_marginTop="2dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="20 stickers" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/viewSubArtists"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/decArtists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:text="Love to draw and make stickers\n.Original work.Follow me on link below" />

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/button_blue_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Follow"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </LinearLayout>


</LinearLayout>